{% trans_default_domain 'FOSUserBundle' %}
<h1 class="m-b-lg">Sign in</h1>
{% if error is defined and error %}
    <div class="alert alert-danger alert-dismissible">
    	{{ error.messageKey|trans(error.messageData, 'security') }}
    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		  <span aria-hidden="true">&times;</span>
		</button>
    </div>
{% endif %}

<form  class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    <div class="col-sm-6 b-r p-w-lg">
        <form role="form">
            <div class="form-group"><label>Username or Email address</label> 
                <input type="text" id="username" name="_username" value="{% if last_username|length %}{{ last_username }}{% endif %}" placeholder="{{ 'security.login.username'|trans }}" class="form-control" required="required"></div>
            <div class="form-group"><label>Password</label>
                <input type="password" name="_password" placeholder="{{ 'security.login.password'|trans }}" class="form-control" id="password" required="required"></div>
            <div class="form-group">
                 <input class="btn btn-primary btn pull-right" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
               <input type="checkbox" id="remember_me" name="_remember_me" value="on"  class="p-w-xs"/>
            </div>
        </form>
    </div>
    <div class="col-sm-6 p-w-sm"><h3>Or create an account</h3>
        <p class="text-center">
            <a href="{{ path('fos_user_registration_register') }}"><i class="fa fa-sign-in big-icon"></i></a>
        </p>
    </div>
    <hr>
    <div class="text-center b-t p-sm col-md-12 m-t-lg" style="border-top: 1px solid #aaa">
        <a href="{{ path('fos_user_resetting_request') }}" class="btn btn-outline btn-default">Forgot password?</a>
    </div>
    <div class="clearfix"></div>
</form>

