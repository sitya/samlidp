                                <li>
                                    <a href="{{ path('easyadmin') }}"><i class="fa fa-user-secret"></i> {% trans %}EasyAdmin{% endtrans %}</a>
                                </li>
                            {% endif %}
                            <li>
                                <a href="{{ path('app_idp_idplist') }}"><i class="fa fa-building"></i> Your Identity Providers</a>
                            </li>
